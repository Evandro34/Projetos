<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:background="@drawable/bg_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text"
                android:padding="8dp"
                android:text="Afericao de Pa"
                android:textAllCaps="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_total_pa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAllCaps="true"
                android:background="@drawable/bg_edit"
                android:text="09/05/1987" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text"
                android:padding="8dp"
                android:text="Afericao de temperatura "
                android:textAllCaps="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_total_temperatura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAllCaps="true"
                android:background="@drawable/bg_edit"
                android:text="manha" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text"
                android:padding="8dp"
                android:text="curativo simples"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_total_curativo_simples"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAllCaps="true"
                android:background="@drawable/bg_edit"
                android:text="111.111.111-11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text"
                android:padding="8dp"
                android:text="Glicemia Capilar"
                android:textAllCaps="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_total_glicemia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAllCaps="true"
                android:background="@drawable/bg_edit"
                android:text="09/05/1987" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text"
                android:padding="8dp"
                android:text="Medição de  Altura"
                android:textAllCaps="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_total_altura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAllCaps="true"
                android:background="@drawable/bg_edit"
                android:text="MASCULINO" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_text"
                android:padding="8dp"
                android:text="Medição de Peso"
                android:textAllCaps="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_total_peso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:textAllCaps="true"
                android:background="@drawable/bg_edit"
                android:text="1-usb" />

        </LinearLayout>






    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
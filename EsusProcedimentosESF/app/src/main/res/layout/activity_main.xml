<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".view.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">


            <android.widget.Button
                android:id="@+id/btn_cad_procedimento"
                style="@style/btn_verde"
                android:drawableLeft="@drawable/icc_add_proc_32"
                android:text="   Procedimentos " />

            <android.widget.Button
                android:id="@+id/btn_relatorio_pab"
                style="@style/btn_verde"
                android:drawableLeft="@drawable/ic_relatorio_32"
                android:text="   Relatório Pab   " />

            <android.widget.Button
                android:id="@+id/btn_relatorio_bpa"
                style="@style/btn_verde"
                android:drawableLeft="@drawable/ic_relatorio_32"
                android:text="    Relatório Bpa "

                />


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
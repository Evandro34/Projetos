<resources>
    <!-- Base application theme. -->
    <style name="Theme.EsusProcedimentosESF" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_500</item>
        <item name="colorPrimaryVariant">@color/verde_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde_1000</item>
        <item name="colorSecondaryVariant">@color/verde_1200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="configButtonMain">

        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="configTextInputEditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="configImagemView">


        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@color/verde_1200</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="configTextInputEditTextCadProc">

        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:enabled">false</item>

    </style>

    <style name="configCkeckbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditTextHintStyle" parent="Theme.EsusProcedimentosESF">
        <item name="android:textColor">#3F51B5</item>
    </style>


</resources>
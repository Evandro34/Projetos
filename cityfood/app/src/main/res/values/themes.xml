<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cityfood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cor_principal</item>
        <item name="colorPrimaryVariant">@color/cor_principal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cor_principal</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog_status</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="Theme.IfoodClone2" parent="Theme.Cityfood">
        <item name="colorPrimaryVariant">@color/cor_principal</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ThemeProgressBar" parent="Theme.Cityfood">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ThemeProgressBar2" parent="Theme.Cityfood">
        <item name="colorAccent">#FF0000</item>
    </style>

    <style name="CustomStyleTabLayout" parent="Theme.Cityfood">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeBnvOn">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>
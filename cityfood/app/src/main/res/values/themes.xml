<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cityfood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cor_principal</item>
        <item name="colorPrimaryVariant">@color/cor_principal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cor_principal</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeProgressBar" parent="Theme.Cityfood">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CustomStyleTabLayout" parent="Theme.Cityfood">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeProgressBar2" parent="Theme.Cityfood">
        <item name="colorAccent">#FF0000</item>
    </style>
    <style name="Theme.Cityfood.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Cityfood.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Cityfood.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>